            <MudNavGroup Title="Score Preview" Icon="@Icons.Filled.Score" Expanded="false">
                <MudNavLink Class="nav-link" Href="/midtermpreview">Mid-Term Preview</MudNavLink>
                <MudNavLink Class="nav-link" Href="/termendpreview">End of Term Preview</MudNavLink>
                <MudNavLink Class="nav-link" Href="/checkpointpreview">Check Point / IGCSE Preview</MudNavLink>
            </MudNavGroup>

            <MudNavLink Class="nav-link" Href="/resultsgenerator" Icon="@Icons.Filled.AddCard">Academic Results</MudNavLink>
            <MudNavLink Class="nav-link" Href="/markssettings" Icon="@Icons.Filled.SettingsApplications">Mark Settings</MudNavLink>
            <MudNavLink Class="nav-link" Href="/cbtexams" Icon="@Icons.Filled.Quiz">CBT Exams</MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="Settings" Icon="@Icons.Filled.Settings" Expanded="true">
            <MudNavGroup Title="Manage Users" Icon="@Icons.Filled.ManageAccounts" Expanded="false">
                <MudNavLink Class="nav-link" Href="/userstaff">Staff</MudNavLink>
                <MudNavLink Class="nav-link" Href="/userstudent">Student</MudNavLink>
            </MudNavGroup>

           @* <MudNavGroup Title="Transactions" Icon="@Icons.Filled.Transform" Expanded="false">
                <MudNavLink Class="nav-link" Href="/academicstrans">Academic Transactions</MudNavLink>
            </MudNavGroup>*@
        </MudNavGroup>
