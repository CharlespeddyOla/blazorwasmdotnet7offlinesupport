            <MudNavGroup Title="Comments Entry" Icon="@Icons.Filled.BorderColor" Expanded="false">
                <MudNavLink Class="nav-link" Href="/midtermcomments">Mid-Term Comments</MudNavLink>
                <MudNavLink Class="nav-link" Href="/termendcomments">End of Term Comments</MudNavLink>
