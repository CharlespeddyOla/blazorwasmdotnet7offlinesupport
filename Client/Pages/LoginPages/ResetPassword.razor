@page "/resetpassword"


<EditForm Model="@passwordResetRequest" OnValidSubmit="@PasswordReset">
    <FluentValidationValidator />
    <MudText Typo="Typo.h5">Password Reset</MudText>
    <br />
    <MudGrid>
        <MudItem xs="12" sm="6" md="12">
            <MudTextField Label="Email" @bind-Value="@passwordResetRequest.Email" For="() => passwordResetRequest.Email"></MudTextField>
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="12" sm="6" md="12">
            <MudTextField @bind-Value="@passwordResetRequest.Password" Label="Password" Variant="Variant.Text" InputType="@PasswordInput"
                          Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ShowHidePassword"
                          AdornmentAriaLabel="Show Password" For="@(() => passwordResetRequest.Password)" />
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="12" sm="6" md="12">
            <MudTextField @bind-Value="@passwordResetRequest.ConfirmPassword" Label="Password" Variant="Variant.Text" InputType="@PasswordInput"
                          Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ShowHidePassword"
                          AdornmentAriaLabel="Show Password" For="@(() => passwordResetRequest.ConfirmPassword)" />
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="12" sm="6" md="12" Class="d-flex justify-center py-2 px-1 mt-2">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.AppRegistration" Class="align-self-center mr-3" Color="Color.Primary">Reset Password</MudButton>
            <a href="/" style="font-size:medium;">Cancel?</a>
        </MudItem>
    </MudGrid>    
</EditForm>
